<div class="groceries-container"> 
<h1>Karen's Grocery List</h1>
  <h2>KK's Groceries - TO BUY</h2>

     <div class="groceries"> 
      <ul>
    <% @groceries.each do |groceryitem| %>
     
      <li><%= groceryitem.item %></li>
    
          <%= link_to 'Edit',  edit_grocery_path(groceryitem), :data => { :colorbox => true } %>
          <%= link_to 'Delete list item', groceryitem, method: :delete, data: { confirm: "Are you sure you want to delete this item?"  } %>
    <% end %> 
      </ul>
<%= link_to 'Add New Grocery Item', new_grocery_path %>
 </div>
</div>
